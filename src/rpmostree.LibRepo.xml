  <interface name="rpmostree.LibRepoWorker">
    <method name="FetchMD">
      <arg name="outputdir" type="s" direction="in"/>
      <arg name="urltype" type="u" direction="in"/>
      <arg name="url" type="s" direction="in"/>
      <arg name="urlsubs" type="a{ss}" direction="in"/>
      <arg name="downloadlist" type="as" direction="in"/>
    </method>

    <signal name="FetchMdProgress">
      <arg name="downloaded" type="d" direction="out"/>
      <arg name="total" type="d" direction="out"/>
    </signal>

    <signal name="FetchMdComplete">
      <arg name="success" type="b" direction="out"/>
      <arg name="msg" type="s" direction="out"/>
    </signal>

    <method name="FetchPackages">
      <arg name="outputdir" type="s" direction="in"/>
      <arg name="names" type="as" direction="in"/>
      <arg name="options" type="a{sv}" direction="in"/>
    </method>

    <signal name="FetchPackagesProgress">
      <arg name="downloaded" type="d" direction="out"/>
      <arg name="total" type="d" direction="out"/>
    </signal>

    <signal name="FetchPackagesComplete">
      <arg name="success" type="b" direction="out"/>
      <arg name="msg" type="s" direction="out"/>
    </signal>

  </interface>

</node>
